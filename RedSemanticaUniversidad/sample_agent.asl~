/* Initial beliefs and rules */

/* Initial goals */
genera_calificaciones([], _).
genera_calificaciones([Car|Cdr], Nota):-
	alumnos &
	Nota = 10 &
	.random(X, Nota) &
	Nota = X * 10 &
	.print("Alumno", Car, " tiene un calificacion de: ", Nota) &
	genera_calificaciones(Cdr, Alumno, Nota).
	
por_alumno([], _).
por_alumno([Car|Cdr], Trabajo):- 
	.print("Alumno ", Car, " hace trabajo ", Trabajo) &
	por_alumno(Cdr, Trabajo).


por_trabajo([], _).
por_trabajo([Car|Cdr], Alumnos):- 
	por_alumno(Alumnos, Car) & 
	por_trabajo(Cdr, Alumnos).

trabajo(video).
trabajo(memoria).

alumno(david).
alumno(martin).

alumnos:- 
	.findall(Al, alumno(Al), A) & 
	.findall(Tr, trabajo(Tr), T) & 
	.print(T) & 
	por_trabajo(T, A).

alumnos.	
!start.

/* Plans */

+!start : true <- .print("hello world."); ?alumnos; ?genera_calificaciones.
